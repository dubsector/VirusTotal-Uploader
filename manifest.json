
{
  "manifest_version": 3,
  "name": "VirusTotal Uploader",
  "version": "1.4.2",
  "description": "Upload files to VirusTotal for scanning.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html",
    "default_title": "VirusTotal Uploader"
  },
  "options_page": "settings.html",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.virustotal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
